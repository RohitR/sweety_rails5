
<%= bootstrap_form_for(@user, :url => users_path,html:{ class: "form-signin"}) do |form| %>
    <%= form.alert_message "Please fix the errors below." %>
    <%= form.text_field :full_name,class: "form-control",autofocus:true,required:true, placeholder:"Full Name" %>
    <%= form.text_field :email,class: "form-control",autofocus:true,required:true, placeholder:"Email address" %>
    <%= form.text_field :username,class: "form-control",autofocus:true,required:true, placeholder:"Username" %>

    <%= form.password_field :password,class: "form-control",required:true, placeholder:"Password" %>
      <%= form.password_field :password_confirmation,class: "form-control",required:true, placeholder:"Password" %>
  <div id="remember" class="checkbox">
        <label>
            <input type="checkbox" value="remember-me"> Remember me
        </label>
    </div>
    <%= form.submit 'Sign Up',:class=>"btn btn-lg btn-primary btn-block btn-signin" %>

<%end%>
<div class="col-md-12 control">
  <div style="border-top: 1px solid#888; padding-bottom:15px; padding-top:15px; font-size:85%" >
      Already have an account!
<%=link_to "Sign in", new_welcome_path%>
        </div>
</div>

